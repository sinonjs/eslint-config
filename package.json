{
  "name": "@sinonjs/eslint-config",
  "description": "Common eslint config for Sinon",
  "version": "4.0.6",
  "repository": {
    "type": "git",
    "url": "http://github.com/sinonjs/eslint-config-sinon.git"
  },
  "scripts": {
    "lint": "eslint . --config index.js",
    "prettier:check": "prettier --check '**/*.{js, md}'",
    "prettier:write": "prettier --write '**/*.{js, md}'",
    "version": "changes --commits --footer",
    "postversion": "git push --follow-tags && npm publish --access public"
  },
  "license": "BSD-3-Clause",
  "files": [
    "index",
    "LICENSE",
    "README.md",
    ".browserslistrc"
  ],
  "main": "index.js",
  "dependencies": {
    "eslint": "^8.26.0",
    "eslint-plugin-compat": "^4.0.2",
    "eslint-plugin-jsdoc": "^39.3.25",
    "eslint-plugin-mocha": "^10.1.0"
  },
  "devDependencies": {
    "@studio/changes": "^2.2.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.2",
    "prettier": "^2.5.1"
  },
  "lint-staged": {
    "*.{js,md}": "prettier --check",
    "*.js": "eslint --quiet"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
